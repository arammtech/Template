@page
@model ForgotPasswordModel
@{
    Layout = "_IdentityLayout";
    ViewData["Title"] = "Forgot your password?";
}

<form class="f-ctr-ctr flex-column" method="post" style="gap: 4.2rem !important;">
    <div class="row">
        <div class="col-12 f-ctr-ctr flex-column">
            <h1 class="big-text fw-bold tc-3">ادخل بريدك الإلكتروني</h1>
            <a asp-page="./Login"
               class="tc-acc fs-2 hov-t-acc hov-zoom-in">تسجيل الدخول</a>
        </div>
    </div>
    <div class="row gy-4 form-container">
        <div asp-validation-summary="ModelOnly" class="div-validations" role="alert"></div>
            <dvi class="col-12">
              <div class="form-input-box">
                <div class="input-box">
                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M2 8.5C2 5 4 3.5 7 3.5H17C20 3.5 22 5 22 8.5V15.5C22 19 20 20.5 17 20.5H7" stroke="#A27B5C" stroke-width="1.5" stroke-miterlimit="10" stroke-linecap="round" stroke-linejoin="round" />
                        <path opacity="0.4" d="M17 9L13.87 11.5C12.84 12.32 11.15 12.32 10.12 11.5L7 9" stroke="#A27B5C" stroke-width="1.5" stroke-miterlimit="10" stroke-linecap="round" stroke-linejoin="round" />
                        <path opacity="0.4" d="M2 16.5H8" stroke="#A27B5C" stroke-width="1.5" stroke-miterlimit="10" stroke-linecap="round" stroke-linejoin="round" />
                        <path opacity="0.4" d="M2 12.5H5" stroke="#A27B5C" stroke-width="1.5" stroke-miterlimit="10" stroke-linecap="round" stroke-linejoin="round" />
                    </svg>
                  <input
                    asp-for="Input.Email"
                    placeholder="البريد الإلكتروني"
                    aria-label="default input example"
                  />
                </div>
                <span asp-validation-for="Input.Email" ></span>
              </div>
            </dvi>
            <div class="col-12">
              <button type="submit"
                  class="btn btn-input btn-lg btn-1 hov-jump">
                <svg width="25" height="24" viewBox="0 0 25 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M12.5 12C15.2614 12 17.5 9.76142 17.5 7C17.5 4.23858 15.2614 2 12.5 2C9.73858 2 7.5 4.23858 7.5 7C7.5 9.76142 9.73858 12 12.5 12Z" stroke="#A27B5C" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                    <path opacity="0.4" d="M3.90991 22C3.90991 18.13 7.75994 15 12.4999 15" stroke="#A27B5C" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                    <path d="M18.7 21.4C20.4673 21.4 21.9 19.9673 21.9 18.2C21.9 16.4327 20.4673 15 18.7 15C16.9327 15 15.5 16.4327 15.5 18.2C15.5 19.9673 16.9327 21.4 18.7 21.4Z" stroke="#A27B5C" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                    <path d="M22.5 22L21.5 21" stroke="#A27B5C" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                </svg>
                بحث عن البريد الالكترونى
              </button>
            </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
