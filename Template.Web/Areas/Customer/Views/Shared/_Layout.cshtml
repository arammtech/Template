                            <rect y="0.531738" width="24" height="24" fill="url(#pattern0_119_1181)" />
                            <defs>
                                <pattern id="pattern0_119_1181" patternContentUnits="objectBoundingBox" width="1" height="1">
                                    <use xlink:href="#image0_119_1181" transform="scale(0.0166667)" />
                                </pattern>
                                <image id="image0_119_1181" width="60" height="60" preserveAspectRatio="none" xlink:href="data:image/png;base64," />
                            </defs>
                        </svg>
                    </a></li>
                <li id="linkedin">
                    <a href="https://www.linkedin.com/company/arammtech">
                        <svg width="24" height="25" viewBox="0 0 24 25" fill="none" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                            <rect y="0.531738" width="24" height="24" fill="url(#pattern0_119_1182)" />
                            <defs>
                                <pattern id="pattern0_119_1182" patternContentUnits="objectBoundingBox" width="1" height="1">
                                    <use xlink:href="#image0_119_1182" transform="scale(0.0166667)" />
                                </pattern>
                                <image id="image0_119_1182" width="60" height="60" preserveAspectRatio="none" xlink:href="data:image/png;base64," />
