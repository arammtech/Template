@model UserDto
@{
    ViewData["Title"] = "Admin Profile";
}


<section id ="user-profile" class="sec-height mt-nav mb-footer">
    <div class="row f-end-ctr back-btn-container">
        <a id="backButton" href="javascript:void(0);" onclick="history.back();" class="btn btn-sm btn-icon shadow hov-zoom-in">
            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                <path d="M9.57 5.93L3.5 12L9.57 18.07" stroke="#A27B5C" stroke-width="1.5" stroke-miterlimit="10" stroke-linecap="round" stroke-linejoin="round" />
                <path opacity="0.4" d="M20.5 12H3.66998" stroke="#8F968D" stroke-width="1.5" stroke-miterlimit="10" stroke-linecap="round" stroke-linejoin="round" />
            </svg>
        </a>
    </div>
    <div class="container size-100">
          <div class="row  p-4">
            <div class="col-4">
                <div class="card">
                    <div class="card__img bg-t"></div>
                    @if (!string.IsNullOrEmpty(Model.ImagePath))
                    {
                        <img class="card__avatar" src="@Model.ImagePath" />
                    }
                    else
                    {
                        <img class="card__avatar" src="/imgs/no-image.jfif" />
                    }
                    <div class="card__title">@(Model.FirstName + " " + Model.LastName)</div>
                    <div class="card__subtitle">@(string.Join(", ", Model.Role))</div>
                </div>
            </div>
            <div class="col-8 p-4 round-2 row gap-5 ">
                <div class="col-12">
                    <div class="row gap-4">
                        <div class="info-box col">
                            <div class="info-label">رقم المعرف</div>
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M12 12C14.7614 12 17 9.76142 17 7C17 4.23858 14.7614 2 12 2C9.23858 2 7 4.23858 7 7C7 9.76142 9.23858 12 12 12Z" stroke="#A27B5C" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                                <path opacity="0.4" d="M20.5899 22C20.5899 18.13 16.7399 15 11.9999 15C7.25991 15 3.40991 18.13 3.40991 22" stroke="#A27B5C" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                            </svg>
                            <div class="info-value">@Model.Id</div>
                        </div>
                        <div class="info-box col">
                            <div class="info-label">الدور</div>
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M12 12C14.7614 12 17 9.76142 17 7C17 4.23858 14.7614 2 12 2C9.23858 2 7 4.23858 7 7C7 9.76142 9.23858 12 12 12Z" stroke="#A27B5C" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                                <path opacity="0.4" d="M20.5899 22C20.5899 18.13 16.7399 15 11.9999 15C7.25991 15 3.40991 18.13 3.40991 22" stroke="#A27B5C" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                            </svg>
                            <div class="info-value">@(string.Join(", ", Model.Role))</div>
                        </div>
                    </div>
                </div>

                <div class="col-12">
                    <div class="row gap-4">
                        <div class="info-box col">
                            <div class="info-label">الاسم الاول</div>
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M12 12C14.7614 12 17 9.76142 17 7C17 4.23858 14.7614 2 12 2C9.23858 2 7 4.23858 7 7C7 9.76142 9.23858 12 12 12Z" stroke="#A27B5C" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                                <path opacity="0.4" d="M20.5899 22C20.5899 18.13 16.7399 15 11.9999 15C7.25991 15 3.40991 18.13 3.40991 22" stroke="#A27B5C" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                            </svg>
                            <div class="info-value">@Model.FirstName</div>
                        </div>
                        <div class="info-box col">
                            <div class="info-label">الاسم الأخير</div>
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M12 12C14.7614 12 17 9.76142 17 7C17 4.23858 14.7614 2 12 2C9.23858 2 7 4.23858 7 7C7 9.76142 9.23858 12 12 12Z" stroke="#A27B5C" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                                <path opacity="0.4" d="M20.5899 22C20.5899 18.13 16.7399 15 11.9999 15C7.25991 15 3.40991 18.13 3.40991 22" stroke="#A27B5C" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                            </svg>
                            <div class="info-value">@Model.LastName</div>
                        </div>
                    </div>
                </div>
                <div class="col-12">
                    <div class="row gap-4">
                        <div class="info-box col">
                            <div class="info-label">اسم المستخدم</div>
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M12 12C14.7614 12 17 9.76142 17 7C17 4.23858 14.7614 2 12 2C9.23858 2 7 4.23858 7 7C7 9.76142 9.23858 12 12 12Z" stroke="#A27B5C" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                                <path opacity="0.4" d="M20.5899 22C20.5899 18.13 16.7399 15 11.9999 15C7.25991 15 3.40991 18.13 3.40991 22" stroke="#A27B5C" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                            </svg>
                            <div class="info-value">@Model.UserName</div>
                        </div>
                        <div class="info-box col">
                            <div class="info-label">البريد الإلكتروني</div>
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M12 12C14.7614 12 17 9.76142 17 7C17 4.23858 14.7614 2 12 2C9.23858 2 7 4.23858 7 7C7 9.76142 9.23858 12 12 12Z" stroke="#A27B5C" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                                <path opacity="0.4" d="M20.5899 22C20.5899 18.13 16.7399 15 11.9999 15C7.25991 15 3.40991 18.13 3.40991 22" stroke="#A27B5C" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                            </svg>
                            <div class="info-value">@Model.Email</div>
                        </div>
                    </div>
                </div>
                <div class="col-12">
                    <div class="row gap-4">
                        <div class="info-box col">
                            <div class="info-label">رقم الهاتف</div>
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M12 12C14.7614 12 17 9.76142 17 7C17 4.23858 14.7614 2 12 2C9.23858 2 7 4.23858 7 7C7 9.76142 9.23858 12 12 12Z" stroke="#A27B5C" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                                <path opacity="0.4" d="M20.5899 22C20.5899 18.13 16.7399 15 11.9999 15C7.25991 15 3.40991 18.13 3.40991 22" stroke="#A27B5C" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                            </svg>
                            <div class="info-value">@(string.IsNullOrEmpty(Model.Phone) ? "لايوجد" : Model.Phone)</div>
                        </div>
                        <div class="info-box col">
                            <div class="info-label">حالة الحساب</div>
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M12 12C14.7614 12 17 9.76142 17 7C17 4.23858 14.7614 2 12 2C9.23858 2 7 4.23858 7 7C7 9.76142 9.23858 12 12 12Z" stroke="#A27B5C" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                                <path opacity="0.4" d="M20.5899 22C20.5899 18.13 16.7399 15 11.9999 15C7.25991 15 3.40991 18.13 3.40991 22" stroke="#A27B5C" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                            </svg>
                            <div class="info-value">@(Convert.ToBoolean(Model.IsLocked) ? "مقفول" : "غير مقفول")</div>
                        </div>
                    </div>
                </div>

                <div class="col-12">
                    <div class="row gap-4">
                     
                        <div class="col info-box">
                            <a asp-area="identity" asp-page="/Account/ConfirmEmail" class="info-value hov-jump">تأكيد حسابك؟</a>
                        </div>

                    </div>
                </div>

                <div class="col-12">
                    <div class="row gap-4">
                        <div class="col">
                            <a asp-area="customer" asp-controller="user" asp-action="editProfile" asp-route-id="@Model.Id" class="btn btn-input btn-lg btn-acc jump">تعديل</a>
                        </div>
                        <div class="col">
                            <a id="forgot-password" asp-area="identity"
                               asp-page="/Account/ForgotPassword"
                               class="btn btn-input btn-lg btn-1 jump">تعديل كلمة المرور</a>
                        </div>
                        <div class="col">
                            <button data-id="@Model.Id" id="deleteUser" class="btn btn-input btn-lg btn-error jump">حذف الحساب</button>
                        </div>
                    </div>
                </div>

               



                </div>
            </div>
    </div>

   
</section>


@section Scripts
{
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script type="module" src="~/js/customer-profile.js"></script>

}