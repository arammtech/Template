@model UserDto
@{
    ViewData["Title"] = "User Profile";
}



<section id="user-details">
    <div class="container">
        <div class="row  p-4">
            <div class="col-4">
                <div class="card">
                    @if (!string.IsNullOrEmpty(Model.ImagePath))
                    {
                        <img class="card__avatar" src="@Model.ImagePath" />
                    }
                    else
                    {
                        <img class="card__avatar" src="/imgs/no-image.jfif" />
                    }

                    <div class="card__title">@(Model.FirstName + " " + Model.LastName)</div>
                    <div class="card__subtitle">@(string.Join(", ", Model.Role))</div>

                    <div class="card__button">
                        <a asp-area="admin" asp-controller="user" asp-action="editRole" asp-route-id="@Model.Id"
                           class="btn btn-input btn-lg btn-1 jump">
                            <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <g opacity="0.4">
                                    <path d="M11.6797 14.62L14.2397 12.06L11.6797 9.5" stroke="#A27B5C" stroke-width="1.5" stroke-miterlimit="10" stroke-linecap="round" stroke-linejoin="round" />
                                    <path d="M4 12.0596H14.17" stroke="#A27B5C" stroke-width="1.5" stroke-miterlimit="10" stroke-linecap="round" stroke-linejoin="round" />
                                </g>
                                <path d="M12 4C16.42 4 20 7 20 12C20 17 16.42 20 12 20" stroke="#A27B5C" stroke-width="1.5" stroke-miterlimit="10" stroke-linecap="round" stroke-linejoin="round" />
                            </svg>
                            تعديل الدور
                        </a>
                    </div>

                </div>
            </div>
            <div class="col-8 p-4 round-2 row gap-5 ">
                    <div class="col-12">
                        <div class="row gap-4">
                            <div class="info-box col">
                                <div class="info-label">رقم المعرف</div>
                                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M12 12C14.7614 12 17 9.76142 17 7C17 4.23858 14.7614 2 12 2C9.23858 2 7 4.23858 7 7C7 9.76142 9.23858 12 12 12Z" stroke="#A27B5C" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                                    <path opacity="0.4" d="M20.5899 22C20.5899 18.13 16.7399 15 11.9999 15C7.25991 15 3.40991 18.13 3.40991 22" stroke="#A27B5C" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                                </svg>
                                <div class="info-value">@Model.Id</div>
                            </div>
                            <div class="info-box col">
                                <div class="info-label">الدور</div>
                                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M12 12C14.7614 12 17 9.76142 17 7C17 4.23858 14.7614 2 12 2C9.23858 2 7 4.23858 7 7C7 9.76142 9.23858 12 12 12Z" stroke="#A27B5C" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                                    <path opacity="0.4" d="M20.5899 22C20.5899 18.13 16.7399 15 11.9999 15C7.25991 15 3.40991 18.13 3.40991 22" stroke="#A27B5C" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                                </svg>
                                <div class="info-value">@(string.Join(", ", Model.Role))</div>
                            </div>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="row gap-4">
                            <div class="info-box col">
                                <div class="info-label">الاسم الاول</div>
                                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M12 12C14.7614 12 17 9.76142 17 7C17 4.23858 14.7614 2 12 2C9.23858 2 7 4.23858 7 7C7 9.76142 9.23858 12 12 12Z" stroke="#A27B5C" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                                    <path opacity="0.4" d="M20.5899 22C20.5899 18.13 16.7399 15 11.9999 15C7.25991 15 3.40991 18.13 3.40991 22" stroke="#A27B5C" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                                </svg>
                                <div class="info-value">@Model.FirstName</div>
                            </div>
                            <div class="info-box col">
                                <div class="info-label">الاسم الأخير</div>
                                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M12 12C14.7614 12 17 9.76142 17 7C17 4.23858 14.7614 2 12 2C9.23858 2 7 4.23858 7 7C7 9.76142 9.23858 12 12 12Z" stroke="#A27B5C" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                                    <path opacity="0.4" d="M20.5899 22C20.5899 18.13 16.7399 15 11.9999 15C7.25991 15 3.40991 18.13 3.40991 22" stroke="#A27B5C" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                                </svg>
                                <div class="info-value">@Model.LastName</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="row gap-4">
                            <div class="info-box col">
                                <div class="info-label">اسم المستخدم</div>
                                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M12 12C14.7614 12 17 9.76142 17 7C17 4.23858 14.7614 2 12 2C9.23858 2 7 4.23858 7 7C7 9.76142 9.23858 12 12 12Z" stroke="#A27B5C" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                                    <path opacity="0.4" d="M20.5899 22C20.5899 18.13 16.7399 15 11.9999 15C7.25991 15 3.40991 18.13 3.40991 22" stroke="#A27B5C" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                                </svg>
                                <div class="info-value">@Model.UserName</div>
                            </div>
                            <div class="info-box col">
                                <div class="info-label">البريد الإلكتروني</div>
                                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M12 12C14.7614 12 17 9.76142 17 7C17 4.23858 14.7614 2 12 2C9.23858 2 7 4.23858 7 7C7 9.76142 9.23858 12 12 12Z" stroke="#A27B5C" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                                    <path opacity="0.4" d="M20.5899 22C20.5899 18.13 16.7399 15 11.9999 15C7.25991 15 3.40991 18.13 3.40991 22" stroke="#A27B5C" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                                </svg>
                                <div class="info-value">@Model.Email</div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="row gap-4">
                            <div class="info-box col">
                                <div class="info-label">رقم الهاتف</div>
                                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M12 12C14.7614 12 17 9.76142 17 7C17 4.23858 14.7614 2 12 2C9.23858 2 7 4.23858 7 7C7 9.76142 9.23858 12 12 12Z" stroke="#A27B5C" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                                    <path opacity="0.4" d="M20.5899 22C20.5899 18.13 16.7399 15 11.9999 15C7.25991 15 3.40991 18.13 3.40991 22" stroke="#A27B5C" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                                </svg>
                                <div class="info-value">@(string.IsNullOrEmpty(Model.Phone) ? "لايوجد" : Model.Phone)</div>
                            </div>
                            <div class="info-box col">
                                <div class="info-label">حالة الحساب</div>
                                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M12 12C14.7614 12 17 9.76142 17 7C17 4.23858 14.7614 2 12 2C9.23858 2 7 4.23858 7 7C7 9.76142 9.23858 12 12 12Z" stroke="#A27B5C" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                                    <path opacity="0.4" d="M20.5899 22C20.5899 18.13 16.7399 15 11.9999 15C7.25991 15 3.40991 18.13 3.40991 22" stroke="#A27B5C" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" />
                                </svg>
                            <div class="info-value">@(Convert.ToBoolean(Model.IsLocked) ? "مقفول" : "غير مقفول")</div>
                            </div>
                        </div>
                    </div>
                  
                    <div class="col-12">
                        <div class="row gap-4">
                            <div class="col">
                            @if (Convert.ToBoolean(Model.IsLocked))
                                {
                                    <button data-id="@Model.Id" id="lockUser" class="btn btn-input btn-lg btn-em jump">فك القفل</button>
                                }
                                else
                                {
                                    <button data-id="@Model.Id" id="lockUser" class="btn btn-input btn-lg btn-1 jump">قفل</button>
                                }
                            </div>
                            <div class="col">
                                <button data-id="@Model.Id" id="deleteUser"  class="btn btn-input btn-lg btn-error jump">حذف الحساب</button>
                            </div>
                        </div>
                    </div>

                    <div class="col-12">
                        <div class="row f-end-ctr">
                            <div class="col-4">
                                <a id="backButton" href="javascript:void(0);" onclick="history.back();" class="btn btn-input btn-lg btn-2 jump">الرجوع</a>
                        </div>
                    </div>



                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts
 {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script type="module" src="~/js/user-profile.js"></script> 

}